{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/vflo0002/3179-Assignment2/refs/heads/main/data/familydomesticviolence.csv"
  },
  "vconcat": [
    {
      "width": 250,
      "height": 250,
      "data": {
    "url": "https://raw.githubusercontent.com/vflo0002/3179-Assignment2/refs/heads/main/data/familydomesticviolence.csv"
  },
      "transform": [
        {
          "filter": "datum.Year == 2014"
        },
        {
          "aggregate": [{"op": "sum", "field": "Number of Offense", "as": "Total Offenses"}],
          "groupby": ["State"]
        }
      ],
      "mark": {"type": "arc", "innerRadius": 35, "outerRadius": 200},
      "encoding": {
        "theta": {"field": "Total Offenses", "type": "quantitative"},
        "color": {"field": "State", "type": "nominal", "legend": {"title": "State"}}
      }
    },
    {
      "width": 350,
      "height": 300,
      "data": {
    "url": "https://raw.githubusercontent.com/vflo0002/3179-Assignment2/refs/heads/main/data/familydomesticviolence.csv"
  },
      "transform": [
        {
          "filter": "datum.Year == 2014 && datum.State == 'New South Wales'"
        }
      ],
      "mark": "bar",
      "encoding": {
        "x": {"field": "Sex", "type": "nominal"},
        "y": {"field": "Number of Offense", "type": "quantitative"}
      }
    }
  ]
}
